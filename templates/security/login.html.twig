{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <h1 class="h3 mb-3 font-weight-normal pt-5">Connectez-vous</h1>
    </div>
    <div class="d-flex justify-content-center pt-4">
        <div class="card bg-secondary text-center p-2">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}
                    <div>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control text-black" autocomplete="email" required autofocus>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control text-black" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn btn-info mt-2" type="submit">
                            Connexion
                        </button>
                    </div>
            </form>
        </div>
    </div>
{% endblock %}
